
<div class="row mt-3">
    <div class="col-7">
        
        <h3 class="table-headline">All Users</h3>
        <table class="table table-striped mb-5">
        <thead>
            <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %> 
                <tr>
                <th scope="row"><%= user.id %> </th>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
                </tr>
            <% end %> 
        </tbody>
        </table>
        <div class="my-3">
            <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Total User Amount
                <span class="badge bg-primary rounded-pill number-badge"><%= @users_count %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Total Product Amount
                <span class="badge bg-primary rounded-pill number-badge"><%= @products_count %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Total Review Amount
                <span class="badge bg-primary rounded-pill number-badge"><%= @reviews_count %></span>
            </li>
            </ul>
        </div>
    </div>
    <div class="col-4 ms-5">
        <h3 class="table-headline">All Products</h3>
        <table class="table table-striped">
        <thead>
            <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Chef</th>
            </tr>
        </thead>
        <tbody>
            <% @products.each do |product| %> 
                <tr>
                <th scope="row"><%= product.id %> </th>
                <td><%= product.title %></td>
                <td><%= product.user.full_name %></td>
                </tr>
            <% end %> 
        </tbody>
        </table>
    </div>
</div>


