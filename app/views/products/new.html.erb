<h3 class="mb-3 create-headline">Create New Product</h3>
<%= form_with(model: @product) do |form|%>
    <div class="mb-3">
        <%= form.label :title, class: "form-label"%>
        <br>
        <%= form.text_field :title, class: "form-control"%>
    </div>
    <div class="mb-3">
        <%= form.label :description, class: "form-label" %>
        <br>
        <%= form.text_area :description, cols: 50, rows: 5, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :image_file, class: "form-label"%>
        <br>
        <%= form.text_field :image_file, class: "form-control"%>
    </div>
    <div class="mb-3">
        <%= form.label :price, class: "form-label" %>
        <br>
        <%= form.text_field :price, class: "form-control"%>
    </div>
    <div class="mb-3">
        <%= form.label :sale_price, class: "form-label"  %>
        <br>
        <%= form.text_field :sale_price, class: "form-control"%>
    </div>
    <%= form.submit class: "btn btn-info"%>
<% end %>
<div class="mb-3"></div>